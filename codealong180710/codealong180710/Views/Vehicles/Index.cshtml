@model codealong180710.Models.IndexViewModel

@{

    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Park new vehicle", "Park")
</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.EditorFor(model => model.SearchString)
    </div>
    <div class="form-group">
        @Html.RadioButtonFor(model => model.SearchField, "RegNr") Registration number<br />
        @Html.RadioButtonFor(model => model.SearchField, "VehicleType") Vehicle type
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
}

@if (Model.Vehicles.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].CheckInTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Vehicles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckInTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Check out", "CheckOut", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
